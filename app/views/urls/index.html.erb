<div class="container ">
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Wanna Shorten Url</h5>
            <a href="<%= urls_path %>" class="btn btn-primary">Click Here</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="p-5">
        <h5>Total Click
            <%= @button_click%>
        </h5>
        <% @urls.each do |url| %>
        <div class="card">
            <div class="card-body">
                <h6>Original Url :-
                    <%= url.original_url %>
                </h6>
                <h6>Shortened :-
                    <%= url.shortened_url %>
                </h6>
            </div>
        </div>
        <% end %>
    </div>
</div>